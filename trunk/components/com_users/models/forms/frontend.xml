<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="params">
		<!--  Basic user account settings. -->
		<fieldset name="params" label="COM_USERS_SETTINGS_FIELDSET_LABEL">

			<field name="editor" type="plugins" folder="editors"
				description="COM_USERS_USER_FIELD_EDITOR_DESC"
				label="COM_USERS_USER_FIELD_EDITOR_LABEL"
			>
				<option value="">JOPTION_USE_DEFAULT</option>
			</field>

			<field name="timezone" type="timezone"
				label="COM_USERS_USER_FIELD_TIMEZONE_LABEL"
				description="COM_USERS_USER_FIELD_TIMEZONE_DESC"
			>
				<option value="">JOPTION_USE_DEFAULT</option>
			</field>

			<field name="language" type="language"
				client="site"
				description="COM_USERS_USER_FIELD_FRONTEND_LANGUAGE_DESC"
				label="COM_USERS_USER_FIELD_FRONTEND_LANGUAGE_LABEL"
				filter="cmd"
			>
				<option value="">JOPTION_USE_DEFAULT</option>
			</field>

		</fieldset>
	</fields>
        
       <!-- <fields name="report">-->
            <!-- Email report subscription. -->
            <fieldset name="report" label="COM_USERS_SETTINGS_REPORT_FIELDSET_LABEL">

                    <field name="reportEmail" type="reportEmail" label="COM_USERS_USER_FIELD_EMAIL_LABEL" description="COM_USERS_USER_FIELD_EMAIL_LABEL">
                    </field>
                    <field name="sendReport" type="checkbox" label="COM_USERS_USER_FIELD_EMAILENABLED_LABEL" description="COM_USERS_USER_FIELD_EMAILENABLED_LABEL" value="1" >
                    </field>
                    <field name="reportType" type="checkboxes" default="Total" label="COM_USERS_USER_FIELD_REPORT_LABEL" description="COM_USERS_USER_FIELD_REPORT_LABEL" required="true">
                        <option value="Total"> Total Score </option>
                    </field>
                    <field name="frequency" type="radio" default="Daily" label="COM_USERS_USER_FIELD_FREQUENCY_LABEL" description="COM_USERS_USER_FIELD_FREQUENCY_LABEL" value="1"  required="true"> 
                        <option value="1"> Every Day </option>  
                        <option value="7"> Every Week </option>   
                        <option value="30"> Every Month </option>                 
                    </field>
            </fieldset>
                
       <!-- </fields>-->
</form>
